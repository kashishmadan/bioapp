    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EmbrWaveActivity">

        <Button
            android:id="@+id/embr_wave_connect"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="12dp"
            android:text="Connect"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/embr_wave_slider"
            />
        <!--app:layout_constraintVertical_chainStyle="spread"-->
        <!--app:layout_constraintVertical_weight="0"-->

        <com.jaygoo.widget.RangeSeekBar
            android:id="@+id/embr_wave_slider"
            app:layout_constraintTop_toBottomOf="@id/embr_wave_connect"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp"
            android:layout_width="280dp"
            android:layout_height="80dp"
            app:rsb_mode="single"

            app:rsb_min="-9"
            app:rsb_max="9"
            app:rsb_tick_mark_mode="number"
            app:rsb_tick_mark_text_array="@array/markArray"
            app:rsb_tick_mark_text_size="16sp"

            app:rsb_progress_height="6dp"
            app:rsb_progress_color="@color/color_green"
            app:rsb_progress_default_color="@color/rsbColorSeekBarDefault"
            app:rsb_thumb_size="20dp"
            app:rsb_indicator_background_color="@color/color_green"
            app:rsb_indicator_text_size="14sp"
            app:rsb_indicator_width="30dp"
            app:rsb_indicator_height="20dp"
            app:rsb_indicator_show_mode="alwaysShow"
            app:rsb_thumb_scale_ratio="1.2"
            />


        <Button
            android:id="@+id/embr_wave_activate"
            app:layout_constraintTop_toBottomOf="@id/embr_wave_slider"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            tools:text="Refroidit"
            />
