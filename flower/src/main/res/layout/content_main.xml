<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/main_view"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FlowerActivity"
    android:gravity="top|left">

    <nl.tue.ppeters.flower.GraphView
        android:id="@+id/graph"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:foregroundGravity="top"
        android:layout_weight="1"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_weight="0">


        <GridLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="7">

            <EditText
                android:id="@+id/filler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/colorButton1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_row="1"
                android:background="#ffffff"
                android:clickable="true"
                android:contentDescription="Purple"
                android:onClick="colorButtonSelected"
                android:scaleType="fitCenter"
                android:src="@drawable/colorbutton1" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_row="1"
                android:text="low\nalertness"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageButton
                android:id="@+id/colorButton2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_row="2"
                android:background="#ffffff"
                android:clickable="true"
                android:contentDescription="Blue"
                android:onClick="colorButtonSelected"
                android:scaleType="fitCenter"
                android:src="@drawable/colorbutton2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_row="2"
                android:text="under-\nstimulated"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageButton
                android:id="@+id/colorButton3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_row="3"
                android:background="#ffffff"
                android:clickable="true"
                android:contentDescription="Green"
                android:onClick="colorButtonSelected"
                android:scaleType="fitCenter"
                android:src="@drawable/colorbutton3" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_row="3"
                android:text="relaxed"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageButton
                android:id="@+id/colorButton4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_row="4"
                android:background="#ffffff"
                android:clickable="true"
                android:contentDescription="Yellow"
                android:onClick="colorButtonSelected"
                android:scaleType="fitCenter"
                android:src="@drawable/colorbutton4" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_row="4"
                android:text="a little\ntense"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageButton
                android:id="@+id/colorButton5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_row="5"
                android:background="#ffffff"
                android:clickable="true"
                android:contentDescription="Orange"
                android:onClick="colorButtonSelected"
                android:scaleType="fitCenter"
                android:src="@drawable/colorbutton5" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_row="5"
                android:text="tense"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageButton
                android:id="@+id/colorButton6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_row="6"
                android:background="#ffffff"
                android:clickable="true"
                android:contentDescription="Red"
                android:onClick="colorButtonSelected"
                android:scaleType="fitCenter"
                android:src="@drawable/colorbutton6" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_row="6"
                android:text="stressed"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </GridLayout>
    </LinearLayout>

</LinearLayout>



